@model MartinBank.Web.Models.ChequeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    const string chequeFormName = "frmChequeDetails";
}

<div class="panel panel-primary cheque">

    <div class="panel-heading">
        <div class="panel-title">@Model.BankName</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = @chequeFormName, @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.PayTo, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.PayTo, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DateAsString, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 text-center">
                    @Html.TextBoxFor(x => x.DateAsString, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Amount, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.AmountInWords, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.AmountInWords, new { disabled = "disabled", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ESignature, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.ESignature, new { disabled = "disabled", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-7">
                    <input type="button" class="btn btn-primary pull-right btnSend" value="Send" />
                </div>
            </div>
        }
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        var instance = new MartinBank.Payment();
        instance.init();
    });
</script>
